extends layout

block content
    .product-detail
        .row
            .col-md-12
                header
                    h2 #{brewer.product_name.value}
        .row-fluid
            .col-lg-7.col-md-6
                figure.image
                    img(alt=brewer.product_name.value, src=brewer.image.value[0].url)
                .description
                    div
                        != brewer.long_description.getHtml()
                    .product-detail-properties
                        h4 Parameters
                        .row
                            dt.col-xs-12.col-sm-4 Manufacturer
                            dd.col-xs-12.col-sm-8 #{brewer.manufacturer.value[0].name}